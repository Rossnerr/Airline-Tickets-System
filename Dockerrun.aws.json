{
	"AWSEBDockerrunVersion" : 2,
	"containerDefinitions" : [
	  {
		"name" : "airline_tickets_system_db",
		"image" : "rossnerr/airline_tickets_system_db",
		"essential" : true,
		"environment" : [
		  {
			"name" : "POSTGRES_DB",
			"value" : "airline_tickets_system"
		  },
		  {
			"name" : "POSTGRES_USER",
			"value" : "postgres"
		  },
		  {
			"name" : "POSTGRES_PASSWORD",
			"value" : "password"
		  }
		],
		"memory" : 200,
		"cpu" : 1
	  },
	  {
		"name" : "airline_tickets_system_app",
		"image" : "rossnerr/airline_tickets_system_app",
		"essential" : false,
		"links" : [
		  "airline_tickets_system_db"
		],
		"environment" : [
		  {
			"name" : "_JAVA_OPTIONS",
			"value" : "-Xmx512m -Xms256m"
		  },
		  {
			"name" : "SPRING_DATASOURCE_USERNAME",
			"value" : "postgres"
		  },
		  {
			"name" : "SPRING_DATASOURCE_PASSWORD",
			"value" : "password"
		  },
		  {
			"name" : "SPRING_DATASOURCE_URL",
			"value" : "jdbc:postgresql://airline_tickets_system_db:5432/airline_tickets_system"
		  }
		],
		"memory" : 500,
		"portMappings": [
		  {
			"hostPort": 80,
			"containerPort": 8080
		  }
		],
		"cpu" : 1
	  }
	]
  }
  